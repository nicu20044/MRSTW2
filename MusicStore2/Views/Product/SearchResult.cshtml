@model IEnumerable<MusicStore2.Domain.Entities.Product.ProductData>
@{
    ViewBag.Title = "Search Result";
}

<h2>Search Results</h2>

@if (!Model.Any())
{
    <div class="alert alert-warning">No songs found.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Artist</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var song in Model)
            {
                <tr>
                    <td>@song.Name</td>
                    <td>@song.ArtistName</td>
                    <td>@song.Price.ToString("C")</td>
                    <td>
                        <a class="btn btn-primary" href="@Url.Action("Details", "Product", new { id = song.Id })">
                            View
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
