@model IEnumerable<MusicStore2.Domain.Entities.Subscription.PlanData>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Subscription Plans</title>
  <link rel="stylesheet" href="~/Scripts/css/subscriptionPage.css" />
</head>
<body>

<section class="pricing-container">
  @foreach (var plan in Model)
  {
    <div class="plan-card">
      <h2 class="plan-title">@plan.Name</h2>
      <p class="plan-price">$@plan.Price / @plan.DurationDays days</p>
      <ul class="plan-features">
        <li>Access to all features</li>
        <li>Priority support</li>
        <li>Analytics included</li>
      </ul>
      <form action="@Url.Action("PaymentPage", "ShoppingCart")" method="get">
        <input type="hidden" name="planId" value="@plan.Id" />
        <button type="submit" class="choose-button">Choose Plan</button>
      </form>
    </div>
  }
</section>

</body>
</html>